<div class='container'>
  <h1 class='text-center'>Stories</h1>
   <% if admin_signed_in? %>
    <p class='text-center'><%= link_to 'Add New Story', new_story_path, class: 'btn btn-success' %></p>
    <% end %>
  <div class='row'>
    <% before_vasi=@stories.where(:Order=> 1)
    after_vasi=@stories.where(:Order=> 2)
    slave_revolt=@stories.where(:Order=> 3) %>
    <div class='col-sm-4'>
    <h2> Before the Vasi War </h2>
    <% before_vasi.each do|story| %>
      
    <h3 class='text-center'><%=link_to story.title, story_path(story)%></h3>
    <% if admin_signed_in? %>
         <%= link_to 'Edit story', edit_story_path(story), class: 'btn btn-warning' %>
        <%= link_to 'Delete story', story, method: :delete, class: 'btn btn-danger' %>
      
    <% end %>
    <% end %>
    </div>
    <div class='col-sm-4'>
    <h2> After the Vasi War </h2>
    <% after_vasi.each do|story| %>
     
        <h3 class='text-center'><%=link_to story.title, story_path(story)%></h3>
 <% if admin_signed_in? %>
         <%= link_to 'Edit story', edit_story_path(story), class: 'btn btn-warning' %>
        <%= link_to 'Delete story', story, method: :delete, class: 'btn btn-danger' %>
      
    <% end %>
    <% end %>
    </div>
    <div class='col-sm-4'>
<h2> Slave Revolts </h2>
    <% slave_revolt.each do|story| %>
        <h3 class='text-center'><%=link_to story.title, story_path(story)%></h3>
 <% if admin_signed_in? %>
         <%= link_to 'Edit story', edit_story_path(story), class: 'btn btn-warning' %>
        <%= link_to 'Delete story', story, method: :delete, class: 'btn btn-danger' %>
      
    <% end %>
    <% end %>
    </div>
  </div>
</div>

